# Default for all
* text=auto eol=lf

# Documentation
*.md text diff=markdown eol=crlf

# Scripts
*.sh text diff=sh
*.ps1 text diff=ps1 eol=crlf

# Code for backend
*.php text diff=php
*.shtml text diff=shtml
*.py text diff=python


# Frontend Files
*.html text diff=html
*.htm text diff=html
*.xhtml text diff=xhtml
*.dhtml text diff=dhtml

## Style sheets
*.css text diff=css
*.scss text diff=scss

## JavaScript / TypeScript
*.js text diff=js
*.ts text diff=ts

# Typical used data formats
*.csv text diff=csv
*.xml text diff=xml
*.json text diff=json

# used for workflows
*.yaml text diff=yaml

# Git attributes
.gitignore text diff=gitignore export-ignore
.gitattributes text diff=gitattributes export-ignore
.gitmodules text diff=gitmodules export-ignore

Changelog.md export-ignore

/.github export-ignore
